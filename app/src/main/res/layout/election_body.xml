<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- election body section -->
    <TableLayout
        android:id="@+id/details_admin_body_table"
        style="@style/two_column_table"
        >

        <TableRow
            android:id="@+id/details_admin_body_name_row"
            style="@style/fragment_header"
            >

            <TextView
                android:id="@+id/details_admin_body_name"
                style="@style/fragment_header"
                android:layout_span="2"
                android:paddingLeft="0sp"
                android:paddingRight="15sp"
                android:text="@string/details.body.header.state_administration"
                />
        </TableRow>

        <TableRow>

            <View style="@style/table_row_divider"/>
        </TableRow>

        <!-- links section -->
        <TableRow
            android:id="@+id/details_links_section_header_row"
            style="@style/fill_width_wrap_height"
            >

            <Button
                android:id="@+id/details_links_section_header"
                style="@style/details_accordion_button"
                android:drawableLeft="@drawable/ic_computer"
                android:text="@string/details.section.header.links"
                />
        </TableRow>

        <TableLayout
            android:id="@+id/details_links_section"
            style="@style/fill_width_wrap_height"
            android:visibility="gone"
            >

            <TableRow
                android:id="@+id/details_election_info_url_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_election_info_url_label"
                    style="@style/details_link_row"
                    android:text="@string/details.label.election_info_url"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/details_election_info_url_divider">

                <View style="@style/table_row_divider"/>
            </TableRow>

            <TableRow
                android:id="@+id/details_registration_url_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_registration_url_label"
                    style="@style/details_link_row"
                    android:text="@string/details.label.voter_registration_url"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/details_registration_url_divider">

                <View style="@style/table_row_divider"/>
            </TableRow>

            <TableRow
                android:id="@+id/details_registration_confirmation_url_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_registration_confirmation_url_label"
                    style="@style/details_link_row"
                    android:text="@string/details.label.voter_registration_confirmation_url"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/details_registration_confirmation_url_divider">

                <View style="@style/table_row_divider"/>
            </TableRow>

            <TableRow
                android:id="@+id/details_absentee_url_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_absentee_url_label"
                    style="@style/details_link_row"
                    android:text="@string/details.label.absentee_voting_url"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/details_absentee_url_divider">

                <View style="@style/table_row_divider"/>
            </TableRow>

            <TableRow
                android:id="@+id/details_location_finder_url_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_location_finder_url_label"
                    style="@style/details_link_row"
                    android:text="@string/details.label.voting_location_finder_url"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/details_location_finder_url_divider">

                <View style="@style/table_row_divider"/>
            </TableRow>

            <TableRow
                android:id="@+id/details_ballot_info_url_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_ballot_info_url_label"
                    style="@style/details_link_row"
                    android:text="@string/details.label.ballot_info_url"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/details_ballot_info_url_divider">

                <View style="@style/table_row_divider"/>
            </TableRow>

            <TableRow
                android:id="@+id/details_election_rules_url_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_election_rules_url_label"
                    style="@style/details_link_row"
                    android:text="@string/details.label.election_rules_url"
                    />
            </TableRow>
        </TableLayout>
        <!-- end links section -->

        <!-- voter services section -->
        <TableRow
            android:id="@+id/details_voter_services_section_header_row"
            style="@style/fill_width_wrap_height"
            >

            <Button
                android:id="@+id/details_voter_services_section_header"
                style="@style/details_accordion_button"
                android:drawableLeft="@drawable/ic_vservices"
                android:text="@string/details.label.voter_services"
                />
        </TableRow>

        <TableLayout
            android:id="@+id/details_voter_services_section"
            style="@style/fill_width_wrap_height"
            android:visibility="gone"
            >

            <TableRow
                android:id="@+id/details_voter_services_row"
                style="@style/table_row"
                >

                <TextView
                    android:id="@+id/details_voter_services"
                    style="@style/details_subsection_paragraph"
                    />
            </TableRow>
        </TableLayout>
        <!-- end voter services section -->

        <!-- hours of operation section -->
        <TableRow
            android:id="@+id/details_hours_of_operation_section_header_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/details_hours_of_operation_section_header"
                style="@style/details_accordion_button"
                android:drawableLeft="@drawable/ic_hours"
                android:text="@string/details.label.hours_of_operation"
                />
        </TableRow>

        <TableLayout
            android:id="@+id/details_hours_of_operation_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TableRow
                android:id="@+id/details_hours_of_operation_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/details_hours_of_operation"
                    style="@style/details_subsection_paragraph"
                    />
            </TableRow>
        </TableLayout>
        <!-- end hours of operation section -->

        <!-- correspondence address section -->
        <TableRow
            android:id="@+id/details_correspondence_address_section_header_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/details_correspondence_address_section_header"
                style="@style/details_accordion_button"
                android:drawableLeft="@drawable/ic_address_marker"
                android:text="@string/details.label.correspondence_address"
                />
        </TableRow>

        <TableLayout
            android:id="@+id/details_correspondence_address_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TableRow
                android:id="@+id/details_correspondence_address_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/details_correspondence_address"
                    style="@style/details_subsection_paragraph"
                    />
            </TableRow>
        </TableLayout>
        <!-- end correspondence address section -->

        <!-- physical address section -->
        <TableRow
            android:id="@+id/details_physical_address_section_header_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/details_physical_address_section_header"
                style="@style/details_accordion_button"
                android:drawableLeft="@drawable/ic_address_marker"
                android:text="@string/details.label.physical_address"
                />
        </TableRow>

        <TableLayout
            android:id="@+id/details_physical_address_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TableRow
                android:id="@+id/details_physical_address_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/list_selector_background"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/details_physical_address"
                    style="@style/details_subsection_paragraph"
                    android:clickable="false"
                    android:textIsSelectable="false"
                    />
            </TableRow>
        </TableLayout>
        <!-- end physical address section -->

        <!-- election officials section -->
        <TableRow
            android:id="@+id/details_election_officials_section_header_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/details_election_officials_section_header"
                style="@style/details_accordion_button"
                android:drawableLeft="@drawable/ic_officials"
                android:text="@string/details.label.election_officials"
                />
        </TableRow>

        <TableLayout
            android:id="@+id/details_election_officials_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TableRow
                android:id="@+id/details_election_officials_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/details_election_officials"
                    style="@style/details_subsection_paragraph"
                    />
            </TableRow>
        </TableLayout>
        <!-- end election officials section -->

        <TableRow>

            <View style="@style/table_row_divider"/>
        </TableRow>

    </TableLayout>
    <!-- end election body admin body section -->
</merge>