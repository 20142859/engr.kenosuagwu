<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ballot_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.votinginfoproject.VotingInformationProject.fragments.BallotFragment">

    <RelativeLayout
        android:id="@+id/ballot_fragment_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ballot_election_name"
            android:textColor="#00234b"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:textStyle="bold"
            android:id="@+id/ballot_election_date"
            android:layout_below="@+id/ballot_election_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/ballot_election_name"
            android:layout_alignEnd="@+id/ballot_election_name" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ballot_contests_list"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/ballot_contests_list_header"
            android:divider="#e6e6e6"
            android:dividerHeight="1sp"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="true"
            android:background="#ffffff"
            android:textColor="#808080"
            android:layout_below="@+id/ballot_contests_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ebeef0"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:text="@string/ballot_contests_list_header"
            android:id="@+id/ballot_contests_header"
            android:layout_below="@+id/ballot_election_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="@dimen/activity_vertical_margin" />
    </RelativeLayout>
</RelativeLayout>
