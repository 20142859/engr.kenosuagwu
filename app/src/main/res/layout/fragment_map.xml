<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_fragment"
    style="@style/fragment_style" >

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        style="@style/map_button_bar"
        android:id="@+id/locations_map_button_bar" >

        <Button
            style="@style/map_button_bar_button"
            android:text="@string/locations_list_all_button_label"
            android:id="@+id/locations_map_all_button" />

        <View style="@style/map_button_bar_separator" />

        <Button
            style="@style/map_button_bar_button"
            android:text="@string/locations_list_early_voting_button_label"
            android:id="@+id/locations_map_early_button" />

        <View style="@style/map_button_bar_separator" />

        <Button
            style="@style/map_button_bar_button"
            android:text="@string/locations_list_polling_sites_button_label"
            android:id="@+id/locations_map_polling_button" />
    </LinearLayout>

</RelativeLayout>