<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fill_width_wrap_height">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_width_wrap_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_width_match_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fragment_style" parent="@style/match_width_match_height">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="fragment_header" parent="@style/wrap_width_wrap_height">
        <item name="android:textColor">#00234b</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="fragment_subheader"  parent="@style/wrap_width_wrap_height">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="listview"  parent="@style/wrap_width_wrap_height">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:divider">#e6e6e6</item>
        <item name="android:dividerHeight">1sp</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="section_header" parent="@style/fill_width_wrap_height">
        <item name="android:background">#ebeef0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="contest_detail_label"  parent="@style/wrap_width_wrap_height">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="contest_detail_item"  parent="@style/wrap_width_wrap_height">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_header" parent="@style/wrap_width_wrap_height" >
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0067ab</item>
    </style>

    <style name="list_item_content" parent="@style/wrap_width_wrap_height" >
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="spinner" parent="fill_width_wrap_height">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/spinner_background_ab_viptabbar</item>
        <item name="android:spinnerStyle">@android:style/Widget.Spinner.DropDown</item>
    </style>

    <style name="table_row_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#e6e6e6</item>
    </style>

    <style name="table_row">
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <style name="candidate_details_row_image">
        <item name="android:scaleType">center</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="candidate_details_row_text" parent="list_item_header">
        <item name="android:padding">5dip</item>
    </style>

    <style name="two_column_table" parent="fill_width_wrap_height">
        <item name="android:stretchColumns">1</item>
        <item name="android:shrinkColumns">0</item>
    </style>

    <style name="map_header" parent="fragment_header">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="map_button" parent="wrap_width_wrap_height">
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/map_button</item>
        <item name="android:textColor">@drawable/map_button_text</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="map_button_bar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:layout_marginBottom">15sp</item>
        <item name="android:background">@drawable/bordered_button_unselected</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="map_button_bar_button" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#00234b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="map_button_bar_separator">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">#cccccc</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>