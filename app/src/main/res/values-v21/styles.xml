<!-- Base application theme. -->
<resources>

    <style name="AppThemeHome" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/colorPrimaryHome</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccentDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccentDark</item>

        <!--<item name="android:panelColorBackground">@drawable/selector_overflow_menu</item>-->
        <!--<item name="android:panelFullBackground">@drawable/selector_overflow_menu</item>-->


        <item name="android:radioButtonStyle">@style/vip_radio_style</item>
        <item name="android:windowIsTranslucent">false</item>

        <!-- enable window content transitions -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="fill_width_wrap_height">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_width_wrap_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_width_match_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fragment_style" parent="@style/match_width_match_height">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="fragment_header" parent="@style/wrap_width_wrap_height">
        <item name="android:textColor">@color/button_blue</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">@dimen/home_small_padding</item>
        <item name="android:paddingBottom">@dimen/home_small_padding</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="fragment_sub_header" parent="@style/wrap_width_wrap_height">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingBottom">@dimen/home_xlarge_padding</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="fragment_description" parent="@style/wrap_width_wrap_height">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingBottom">@dimen/home_xlarge_padding</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="feedback_link" parent="@style/wrap_width_wrap_height">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/item_header_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">@dimen/feedback_link_top_padding</item>
        <item name="android:paddingBottom">@dimen/home_large_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">@dimen/home_small_padding</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="vip_list_view" parent="@style/wrap_width_wrap_height">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:divider">@color/list_divider_gray</item>
        <item name="android:dividerHeight">1sp</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="section_header" parent="@style/fill_width_wrap_height">
        <item name="android:background">@color/section_header_gray</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/detail_text_gray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="contest_detail_label" parent="@style/wrap_width_wrap_height">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="contest_detail_item" parent="@style/wrap_width_wrap_height">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/detail_text_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_header" parent="@style/wrap_width_wrap_height">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/item_header_blue</item>
    </style>

    <style name="list_item_content" parent="@style/wrap_width_wrap_height">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="spinner_locations" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/spinner_background_ab_viptabbar</item>
    </style>

    <style name="table_row_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/list_divider_gray</item>
    </style>

    <style name="table_row">
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <style name="candidate_details_row_image">
        <item name="android:scaleType">center</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="candidate_details_row_text" parent="list_item_header">
        <item name="android:padding">5dip</item>
    </style>

    <style name="two_column_table" parent="fill_width_wrap_height">
        <item name="android:stretchColumns">1</item>
        <item name="android:shrinkColumns">0</item>
    </style>

    <style name="map_header" parent="fragment_header">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="map_button" parent="wrap_width_wrap_height">
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@drawable/map_button</item>
        <item name="android:textColor">@drawable/map_button_text</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_bar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:background">@drawable/bordered_button_unselected</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="button_bar_button" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_bar_button</item>
        <item name="android:textColor">@color/button_blue</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="button_bar_separator">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/button_gray</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="details_accordion_button" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">@drawable/details_toggle_unselected</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/detail_text_gray</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">10sp</item>
        <item name="android:drawablePadding">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_span">2</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="details_link_row" parent="wrap_width_wrap_height">
        <item name="android:padding">10sp</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="details_subsection_paragraph" parent="fill_width_wrap_height">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingTop">@dimen/home_xlarge_padding</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingBottom">@dimen/home_xlarge_padding</item>
    </style>

    <style name="activity_home_button_go">
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@drawable/button_ripple_primary</item>
        <item name="android:textColor">@color/home.text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@animator/state_list_go_button</item>
    </style>

    <style name="bottom_navigation_bar">
        <item name="android:elevation">8dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="vip_radio_style" parent="@android:style/Widget.Material.PopupMenu.Overflow">
        <item name="android:button">@drawable/radio_button</item>
    </style>

</resources>
